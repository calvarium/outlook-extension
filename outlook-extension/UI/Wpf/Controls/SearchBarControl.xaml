<UserControl x:Class="outlook_extension.UI.Wpf.Controls.SearchBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="60"
             d:DesignWidth="500">
    <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="12"
            Padding="12">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <wpfui:SymbolIcon Symbol="Search24"
                              FontSize="20"
                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0" />
            <wpfui:TextBox x:Name="SearchInput"
                           Grid.Column="1"
                           Style="{StaticResource SearchTextBoxStyle}"
                           Text="{Binding SearchText, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"
                           Tag="{Binding PlaceholderText, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </Grid>
    </Border>
</UserControl>
